<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:elevation="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/episode_shape"
        android:padding="6dp">

        <TextView
            android:id="@+id/name_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Close call from Ro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/season_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="79dp"
            android:maxLines="1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/name_episode"
            app:layout_constraintTop_toBottomOf="@id/name_episode"
            tools:text="S01E10" />

        <TextView
            android:id="@+id/air_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="April 7, 2014"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/season_episode"
            app:layout_constraintTop_toBottomOf="@id/name_episode"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
